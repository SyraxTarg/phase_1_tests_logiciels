// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  // url      = "file:./pokecenter.db"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  messages   Message[]
  cards    Card[]
  proposedTransactions Transaction[] @relation("Proposer")
  receivedTransactions Transaction[] @relation("Receiver")
}

model Card {
  id       Int    @id @default(autoincrement())
  name     String
  description String
  type     String
  pv       Int
  image    String
  userId      Int
  user        User  @relation(fields: [userId], references: [id])
  transactionsExchange TransactionCardExchange[]
  transactionsReceive TransactionCardReceive[]
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  transactionId Int
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  timestamp DateTime @default(now())
  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model Transaction {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  cardsExchange TransactionCardExchange[]
  cardsReceive TransactionCardReceive[]
  messages    Message[]
  proposerId Int
  receiverId Int
  status    TransactionStatus @default(pending)
  proposer User @relation("Proposer", fields: [proposerId], references: [id])
  receiver User @relation("Receiver", fields: [receiverId], references: [id])
}

enum TransactionStatus {
  pending
  accepted
  rejected
}
model TransactionCardExchange {

  transactionId Int
  cardId Int

  transaction Transaction @relation(fields: [transactionId], references: [id])
  card        Card        @relation(fields: [cardId], references: [id])
  @@id([transactionId, cardId])
}

model TransactionCardReceive {
  transactionId Int
  cardId Int

  transaction Transaction @relation(fields: [transactionId], references: [id])
  card        Card        @relation(fields: [cardId], references: [id])
  @@id([transactionId, cardId])
}